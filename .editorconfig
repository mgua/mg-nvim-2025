# .editorconfig
# this is a file describing how IDEs and editor should behave
# in dealing with files in this (and nested) folders
# not all the editors honor these settings, but most do
#

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab

[*.ps1]
end_of_line = crlf
indent_size = 4

